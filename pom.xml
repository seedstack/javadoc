    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.seedstack.poms</groupId>
        <artifactId>parent-internal</artifactId>
        <version>3.3.1</version>
    </parent>

    <groupId>org.seedstack.javadoc</groupId>
    <artifactId>javadoc</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <seedstack.version>18.4</seedstack.version>
    </properties>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-enforcer-plugin</artifactId>
                    <version>${maven-enforcer-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>enforce-versions</id>
                            <phase>none</phase>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.jfrog.buildinfo</groupId>
                    <artifactId>artifactory-maven-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>build-info</id>
                            <phase>none</phase>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-distribution-javadoc</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>javadoc</goal>
                        </goals>
                        <configuration>
                            <windowtitle>SeedStack API</windowtitle>
                            <doctitle>SeedStack API</doctitle>
                            <detectOfflineLinks>false</detectOfflineLinks>
                            <includeDependencySources>true</includeDependencySources>
                            <includeTransitiveDependencySources>false</includeTransitiveDependencySources>
                            <excludePackageNames>*.internal.*:org.springframework*:org.openjdk*:org.apache.shiro*
                            </excludePackageNames>
                            <additionalDependencies>
                                <additionalDependency>
                                    <groupId>javax.el</groupId>
                                    <artifactId>javax.el-api</artifactId>
                                    <version>${javax.el.version}</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>javax.servlet</groupId>
                                    <artifactId>javax.servlet-api</artifactId>
                                    <version>${javax.servlet.version}</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>javax.jms</groupId>
                                    <artifactId>jms-api</artifactId>
                                    <version>1.1-rev-1</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>javax.resource</groupId>
                                    <artifactId>connector-api</artifactId>
                                    <version>1.5</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>org.hibernate.javax.persistence</groupId>
                                    <artifactId>hibernate-jpa-2.1-api</artifactId>
                                    <version>1.0.0.Final</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>javax.mail</groupId>
                                    <artifactId>mail</artifactId>
                                    <version>1.4.7</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>org.subethamail</groupId>
                                    <artifactId>subethasmtp</artifactId>
                                    <version>3.1.7</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>org.eclipse.paho</groupId>
                                    <artifactId>org.eclipse.paho.client.mqttv3</artifactId>
                                    <version>1.0.2</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>org.apache.kafka</groupId>
                                    <artifactId>kafka-clients</artifactId>
                                    <version>1.0.0</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>org.apache.kafka</groupId>
                                    <artifactId>kafka-streams</artifactId>
                                    <version>1.0.0</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>org.neo4j</groupId>
                                    <artifactId>neo4j-graphdb-api</artifactId>
                                    <version>3.1.0</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>org.quartz-scheduler</groupId>
                                    <artifactId>quartz</artifactId>
                                    <version>2.2.2</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>redis.clients</groupId>
                                    <artifactId>jedis</artifactId>
                                    <version>2.7.3</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>org.apache.solr</groupId>
                                    <artifactId>solr-solrj</artifactId>
                                    <version>5.2.1</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>org.elasticsearch</groupId>
                                    <artifactId>elasticsearch</artifactId>
                                    <version>2.4.3</version>
                                </additionalDependency>
                                <additionalDependency>
                                    <groupId>org.assertj</groupId>
                                    <artifactId>assertj-core</artifactId>
                                    <version>${assertj.version}</version>
                                </additionalDependency>
                            </additionalDependencies>
                            <dependencySourceExcludes>
                                <dependencySourceExclude>com.google.code.findbugs:*</dependencySourceExclude>
                            </dependencySourceExcludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

